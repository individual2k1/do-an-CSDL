@model QuanlyRapphim.sp_Customer_GetById_Result

@{
    ViewBag.Title = "ThongtinKH";
}

<h2 align="center"><b>THÔNG TIN TÀI KHOẢN</b></h2><br />
  <style>
      body {
          background-color: #DCDCDC;
      }
      h2 {
          color: #000000;
      }

      p {
          color: #000000;
      }
      </style>

<div class="container">
    <div class="main-body">


        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            
                            <img style="width:250px; height:300px" src="~/Content/KHimages/@Html.DisplayFor(model => model.Avata)">
                            <div class="mt-3">
                                <h4>@Html.DisplayFor(model => model.FullName)</h4>
                                <p class="text-secondary mb-1">Loại thẻ</p>
                                <p class="text-muted font-size-sm">Điểm tích lũy:@Html.DisplayFor(model => model.Status) </p>
                                <button class="btn btn-primary">Vé của tôi</button>
                                <button class="btn btn-outline-primary">Lịch sử</button>
                            </div>
                            
                        </div>
                    </div>
                </div>
                
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Họ và Tên</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(model => model.FullName)
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(model => model.Email)
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Phone</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(model => model.Phone)
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Địa chỉ</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(model => model.Address)
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">CreditCard</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(model => model.CreditCard)
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Ngày sinh</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(model => model.Bod)
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Tên đăng nhập</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(model => model.Username)
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-12">
                                <a class="btn btn-info " target="__blank" href=@Url.Action("SuaThongtinKH","Khachhang",new { Id=(Session["CusId"].ToString())})>THAY ĐỔI THÔNG TIN</a>
                            </div>
                        </div>
                       
                    </div>
                </div>

                
                    



            </div>
        </div>

    </div>
</div>