            </div>
            <div class="form-group" align="left">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="ĐĂNG KÝ" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




